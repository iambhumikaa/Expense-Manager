<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta name="description" content="this is the navbar">
    <title>Nav-Bar</title>
    <link href="/main.css" rel="stylesheet">
</head>

<body>
    <section class="nav_section">
        <ul class="nav_elements">
            <li onclick="openAboutus()" class="nav_options">About Us</li>
            <li onclick="openDashboard()" class="nav_options">Dashboard</li>
            <li onclick="openExpense()" class="nav_options">Expenses</li>
            <li onclick="openIncome()" class="nav_options">Income</li>
        </ul>
        <ul>
            <li class="logout" onclick="confirmLogout()">Log Out</li>
        </ul>
        </nav>
    </section>
    <script>

        function confirmLogout() {
            if (confirm("Are you sure you want to log out?")) {
                window.location.href = "/logout";
            }
        }

        function openAboutus() {
            window.location.href = "/aboutUs";
        }

        function openDashboard() {
            window.location.href = "/dashboard";
        }

        function openExpense() {
            window.location.href = "/expense";
        }

        function openIncome() {
            window.location.href = "/income";
        }

    </script>
</body>

</html>